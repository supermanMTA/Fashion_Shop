@model Shop_Fashion.Models.Entities.UserInRole

@{
    ViewBag.Title = "ChinhSuaAD";
    Layout = "~/Areas/Admin/Views/Shared/Layout_admin.cshtml";
}

<h2>Chỉnh sửa admin</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @*@Html.HiddenFor(model => model.Id)*@
        <input type="hidden" name="Id" value="@Model.ID" />
        <input type="hidden" name="UserName" value="@Model.UserName" />
        <input type="hidden" name="IDRole" value="@Model.IDRole" />
        <div>
            <div class="form-group" style="width: 40%; float: left; ">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.Status)
                    @Html.ValidationMessageFor(model => model.Status)
                </div>
            </div>
            <div>
                @Html.ActionLink("Chỉnh sửa chi tiết", "ChinhSuaChiTietAD", new { user = Model.UserName })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

