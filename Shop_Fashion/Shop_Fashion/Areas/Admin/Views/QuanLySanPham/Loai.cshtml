@using Shop_Fashion.Models.Entities
@model IEnumerable<Shop_Fashion.Models.Entities.Category>

@{
    ViewBag.Title = "Loai";
    Layout = "~/Areas/Admin/Views/Shared/Layout_admin.cshtml";
}
<div style="padding-left: 30px; width: 650px;">
    <div style="font-size: 40px; border-bottom: cornflowerblue solid 1px; color: royalblue">
        Loại
        <a class="text-aqua" href="~/Admin/QuanLySanPham/ThemNhom"><i class="fa fa-plus-square" style="font-size: 20px; color: #4782cb"></i></a>

    </div>
    @foreach (var item in @ViewBag.Nhom)
    {

        <div style="color:cornflowerblue; width: 1150px; ">
            <div class="fc-color-picker" id="color-chooser" style="font-size: 20px; padding-top: 30px;">
                <div style="float: left; width: 50%; color:#40a5b4;">
                    @item.Name
                    <a class="text-aqua" href="~/Admin/QuanLySanPham/ThemLoai/@item.Id"><i class="fa fa-plus-square" style="color: #40a5b4;"></i></a>
                </div>
                <div style="float: right; width: 50%;">
                    @*<a class="text-blue" href="#"><i class="fa fa-times"></i></a>*@
                    <a class="text-light-blue fa " href="~/Admin/QuanLySanPham/ChinhSuaNhom/@item.Id"><i class="fa fa-pencil-square"></i></a>
                </div>
            </div>
        </div>
        <div style="padding-left: 50px;">
            <table>
                <tr>
                    <td style="width: 80px; color: royalblue; padding-bottom: 6px; padding-top: 6px;">
                        Mã loại
                    </td>
                    <td style="width: 150px; color: royalblue; padding-bottom: 6px; padding-top: 6px;">
                        Tên loại
                    </td>
                    <td style="width: 150px; color: royalblue; padding-bottom: 6px; padding-top: 6px;">
                        Trạng thái
                    </td>
                </tr>
            </table>
        </div>
        foreach (var item2 in Model.Where(x => x.IdGroup.Equals(item.Id)))
        {

            <div style="padding-left: 50px; border-bottom: 2px gray;">
                <table>
                    <tr style="border-bottom: cornflowerblue solid 1px; ">
                        <td style="width:150px; padding-bottom:6px; padding-top:6px; padding-left:30px;">
                            @Html.DisplayFor(modelItem => item2.Id)
                        </td>
                        <td style="width:150px; padding-bottom:6px; padding-top:6px; padding-left:30px;">
                            @Html.DisplayFor(modelItem => item2.Name)
                        </td>
                        <td style="width:150px; padding-bottom:6px; padding-top:6px; padding-left:30px;">
                            @{
                                if (item2.Status.ToString() == "True")
                                {
                                    <span>Đã kích hoạt</span>
                                }
                                else
                                {
                                    <span>Chưa kích hoạt</span>
                                }
                            }
                        </td>
                        <td style="width: 200px; float: right; padding-bottom: 6px; padding-top: 6px; padding-left: 12px; ">
                            @Html.ActionLink("Chỉnh Sửa", "ChinhSuaLoai", new { id = item2.Id }) |
                            @Html.ActionLink("Chi Tiết", "ChiTietLoai", new { id = item2.Id }) |
                            @*@Html.ActionLink("Xóa", "XoaLoai", new { id = item2.Id })*@
                        </td>
                    </tr>
                </table>
            </div>
                                    }
                                }
</div>
