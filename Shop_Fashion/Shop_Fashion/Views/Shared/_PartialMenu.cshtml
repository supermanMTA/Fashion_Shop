@model Shop_Fashion.ViewModel.GroupViewModel

<div class="col-sm-3">
    <div class="left-sidebar">
        <h2>Category</h2>
        <div class="panel-group category-products" id="accordian">
            <!--category-productsr-->
        @foreach (var item in Model.ListGroup)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@item.Id">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @item.Name
                        </a>
                    </h4>
                </div>
                <div id="@item.Id" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (var subitem in Model.ListCategory)
                            {
                                if (subitem.IdGroup == item.Id)
                                {
                                    <li><a href="/Product/Index?CategoryID=@subitem.Id">@subitem.Name </a></li>
                                }

                            }                            
                        </ul>
                    </div>
                </div>
            </div>

        }
           
           
        </div><!--/category-products-->

        <div class="brands_products">
            <!--brands_products-->
            <h2>Thương hiệu</h2>
            <div class="brands-name">
                <ul class="nav nav-pills nav-stacked">
                    @foreach (var item in Model.ListSupplier)
                    {
                        <li><a href="/Product/Index?SupplierID=@item.Id"> <span class="pull-right"></span>@item.Name</a></li>
                    }
                   
                </ul>
            </div>
        </div><!--/brands_products-->

        <div class="price-range">
            <!--price-range-->
            <h2>Price Range</h2>
            <div class="well text-center">
                <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="1000000" data-slider-step="5" data-slider-value="[250,450]" id="sl2"><br />
                <b class="pull-left"> 0 VND</b> <b class="pull-right">1.000.000 VND</b>
            </div>
        </div><!--/price-range-->

    </div>
</div>